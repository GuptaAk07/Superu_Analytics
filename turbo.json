{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalDotEnv": [".env"],
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES",
    "SALT",
    "EMAIL_FROM_ADDRESS",
    "SMTP_CONNECTION_URL",
    "S3_ENDPOINT",
    "S3_ACCESS_KEY_ID",
    "S3_SECRET_ACCESS_KEY",
    "S3_BUCKET_NAME",
    "S3_REGION",
    "DOCKER_BUILD"
  ],
  "pipeline": {
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["db:generate"]
    },
    "build": {
      "dependsOn": ["db:generate"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES",
        "SALT",
        "EMAIL_FROM_ADDRESS",
        "SMTP_CONNECTION_URL",
        "S3_ENDPOINT",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "S3_BUCKET_NAME",
        "S3_REGION",
        "DOCKER_BUILD"
      ]
    }
  }
}